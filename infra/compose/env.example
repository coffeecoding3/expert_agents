# Expert Agents Environment Variables
# Copy this file to .env and fill in your actual values

# Open AI
OPENAI_API_KEY=GPT_5_CHAT_KEY
OPENAI_BASE_URL=GPT_5_AZURE_ENDPOINT
OPENAI_API_VERSION=2025-04-01-preview

# Google Web Search (웹 검색용)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CX=your_google_custom_search_engine_id_here

# Database URLs
DATABASE_URL=mysql://user:password@mysql:3306/expert_agents
REDIS_URL=redis://:password@redis:6379/0

# Application Settings
APP_ENV=development
LOG_LEVEL=DEBUG
ENABLE_METRICS=true
ENABLE_TRACING=true

# Timezone Settings
DEFAULT_TIMEZONE=Asia/Seoul
DB_TIMEZONE=Asia/Seoul

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# SSO (LG전자 SSO 인증용)
SSO_KEY=your_sso_encryption_key_here
SSO_ALLOWED_TIME_DIFF_MINUTES=720

# NEXT IAM
NEXT_IAM_DATABASE_HOST=next_iam_db_host
NEXT_IAM_DATABASE_USER=next_iam_db_user
NEXT_IAM_DATABASE_PW=next_iam_db_password
NEXT_IAM_DATABASE_NAME=next_iam_db_name
NEXT_IAM_DATABASE_PORT=next_iam_db_port

# LGenie MCP Server (외부 MCP 서버 연결용)
LGENIE_MCP_ENDPOINT=lgenie_mcp_endpoint
LGENIE_MCP_API_KEY=lgenie_mcp_api_key
